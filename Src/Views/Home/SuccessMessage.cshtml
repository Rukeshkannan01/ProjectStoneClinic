<html>
<head>
    <title>Login Page</title>
    <style>
        .container {
            position: center;
            top: 10%;
            border-radius: 5px;
            background-color: #6fe0d1;
            padding: 20px;
        }       
    </style>
</head>
<body style="background-image: url('') ">
    <header>
        <div class="container-fluid p-0">
            <nav class="navbar navbar-expand-lg bg-light navbar-light py-3 py-lg-0 px-lg-5">

                <img src="~/Image/Logo.jpeg" width="90" height="90" style="border-inline-style:hidden" />
                <a class="navbar-brand ml-lg-3">
                    <h1 class="m-0 text-secondary"><span class="text-primary">Stone</span>Clinic</h1>
                </a>
            </nav>
        </div>
    </header>
    <br />
    <br />
    <div class="container-fluid bg-light">
        <div>
            <center></center>
            <img src="~/Image/successLogo.jpeg" width="83" height="70" />
            <br />
            <h2>Action Successfully Completed</h2>            
        </div>

        <div class="container-fluid bg-light">
            <div class="row py-2 px-lg-3 ">
                @using (Html.BeginForm("Home", "Home"))
                {
                    <input type="submit" value="Back To Home" size="100" style="box-sizing:border-box" class="btn btn-primary py-2 px-4 d-none d-lg-block" />
                }
                @using (Html.BeginForm("Login", "Home"))
                {
                    <input type="submit" value="Logout" class="btn btn-danger py-2 px-4 d-none d-lg-block" />
                }
            </div>
        </div>
    </div>
</body>
</html>