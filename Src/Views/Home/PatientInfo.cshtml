@model StoneClinic.Models.Patient
<html>
<head> 
    <link href="~/css/site.css" rel="stylesheet" />
    <style>
        body {
            font-family: Arial, Helvetica, sans-serif;
        }

        * {
            box-sizing: border-box;
        }

        input[type=text], select, textarea {
            width: 100%;
            padding: 12px;
            border: 1px solid #ccc;
            border-radius: 4px;
            box-sizing: border-box;
            margin-top: 6px;
            margin-bottom: 16px;
            resize: vertical;
        }

        input[type=submit] {
            color: white;
            padding: 12px 20px;
            border: none;
            border-radius: 4px;
            cursor: pointer;
        }

            input[type=submit]:hover {
                background-color: #0094ff;
            }

        .container {
            border-radius: 5px;
            background-color: #f2f2f2;
            padding: 20px;
        }

        header {
            position: fixed;
            width: 100%;
            top: 0;
            left: 0;
            background-color: white;
            color: white;
            font-family: 'Exo 2', sans-serif;
            padding: 1em;
        }
    </style>
</head>
<body>
    <header>
        
        <!-- Topbar -->
        <div class="container-fluid bg-dark">
            <br />
            <br />
        </div>
        <!-- Navbar -->
        <div class="container-fluid p-0">
            <nav class="navbar navbar-expand-lg bg-light navbar-light py-3 py-lg-0 px-lg-5">

                <img src="~/Image/Logo.jpeg" width="90" height="90" style="border-inline-style:hidden" />

                <a href="index.html" class="navbar-brand ml-lg-3">
                    <h1 class="m-0 text-secondary"><span class="text-primary">Stone</span>Clinic</h1>
                </a>                

                <div class="navbar-nav m-auto py-0">
                    @using (Html.BeginForm("Home", "Home"))
                    {
                        <input type="submit" value="Home" class="btn btn-primary " />
                    }
                    @using (Html.BeginForm("PatientInfo", "Home"))
                    {
                        <input type="submit" value="Patient Info" class="btn btn-primary " />
                    }
                    @using (Html.BeginForm("DoctorInfo", "Home"))
                    {
                        <input type="submit" value="Doctors Info" class="btn btn-primary " />
                    }
                    @using (Html.BeginForm("ScheduleAppointment", "Home"))
                    {
                        <input type="submit" value="Schedule Appointment" class="btn btn-primary " />
                    }
                    @using (Html.BeginForm("DeleteAppointment", "Home"))
                    {
                        <input type="submit" value="Cancel Appointment" class="btn btn-primary " />
                    }
                    @using (Html.BeginForm("Login", "Home"))
                    {
                        <input type="submit" value="Logout" class="btn btn-danger " />
                    }
                </div>
            </nav>
        </div>  
        <div>
            @if (TempData["SuccessMessage"] != null)
            {
                <div align="center" class="alert-success" id="SuccessMgs"><b>@TempData["SuccessMessage"]</b></div>
            }
        </div>
    </header>
    <br />
    <br />
    <br />
    <br />
    <br />
    <br />
    <br />
    <br />

    <div class="container-fluid bg-light">
        <div class=" row py-2 px-lg-3 ">
            <img src="~/Image/Patient_Logo.jpeg" width="63" height="63" />
            <h2 class="m-0 text-primary"><span class="text-secondary"> Add </span>Patient </h2>
        </div>
        <div class="bg-success" style="color:lightgreen"></div>
    </div>

    <div class="container">
        @using (Html.BeginForm("AddPatient", "Home", FormMethod.Post))
        {
        <form>
            <label>First Name</label>
            @Html.TextBoxFor(item => Model.FirstName, new { required = "required" })


            <label>Last Name</label>
            @Html.TextBoxFor(item => Model.LastName, new { required = "required" })

            <label>Gender</label>
            @*@Html.TextBoxFor(item => Model.Sex)*@

            <select name="Sex" required>

            <option selected disabled>Select Gender</option>
            <option value="Male">Male</option>
            <option value="Female">Female</option>
            <option value="Others">Others</option>
        </select>

            @*@Html.DropDownListFor(item => Model.Sex,
           new SelectList(Enum.GetValues(typeof(Gender))), "Select Gender")*@

            <label>Age</label>
            @Html.TextBoxFor(item => Model.Age, new { required = "required" })

            <label>Date of Birth</label>
            <br />
            @*@Html.TextBoxFor(item => Model.DateOfBirth)*@
            <input asp-for="DateOfBirth" type="date" required />
            <span asp-validation-for="DateOfBirth"></span>
            <br />
            <br />
            @using (Html.BeginForm("PatientInfo", "Home"))
            {
                <input type="submit" value="Submit" class="btn btn-primary">

            }
            
        </form>
        }
        
    </div>

</body>
</html>

