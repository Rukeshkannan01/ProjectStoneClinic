@model IEnumerable<StoneClinic.Models.Appointment>

<html>
<head>
    <style>
        body {
            font-family: Arial, Helvetica, sans-serif;
        }

        * {
            box-sizing: border-box;
        }

        input[type=text], select, textarea {
            width: 100%;
            padding: 12px;
            border: 1px solid #ccc;
            border-radius: 4px;
            box-sizing: border-box;
            margin-top: 6px;
            margin-bottom: 16px;
            resize: vertical;
        }

        input[type=submit] {
            color: white;
            padding: 12px 20px;
            border: none;
            border-radius: 4px;
            cursor: pointer;
        }

            input[type=submit]:hover {
                background-color: #0094ff;
            }

        .container {
            border-radius: 5px;
            background-color: #f2f2f2;
            padding: 20px;
        }

        header {
            position: fixed;
            width: 100%;
            top: 0;
            left: 0;
            background-color: white;
            color: white;
            /*            font-family: 'Exo 2', sans-serif; */
            padding: 1em;
        }

        /*#btn {
            margin-top: 10px;
            padding: 10px;
            color:black;
            background-color:dodgerblue;

        }*/
    </style>
</head>
<body>
    <header>
        <!-- Topbar -->
        <div class="container-fluid bg-dark">
            <br />
            <br />
        </div>
        <!-- Navbar -->
        <div class="container-fluid p-0">
            <nav class="navbar navbar-expand-lg bg-light navbar-light py-3 py-lg-0 px-lg-5">

                <img src="~/Image/Logo.jpeg" width="90" height="90" style="border-inline-style:hidden" />

                <a href="#" class="navbar-brand ml-lg-3">
                    <h1 class="m-0 text-secondary"><span class="text-primary">Stone</span>Clinic</h1>
                </a>

                <div class="navbar-nav m-auto py-0">
                    @using (Html.BeginForm("Home", "Home"))
                    {
                        <input type="submit" value="Home" class="btn btn-primary " />
                    }
                    @using (Html.BeginForm("PatientInfo", "Home"))
                    {
                        <input type="submit" value="Patient Info" class="btn btn-primary " />
                    }
                    @using (Html.BeginForm("DoctorInfo", "Home"))
                    {
                        <input type="submit" value="Doctors Info" class="btn btn-primary " />
                    }
                    @using (Html.BeginForm("ScheduleAppointment", "Home"))
                    {
                        <input type="submit" value="Schedule Appointment" class="btn btn-primary " />
                    }
                    @using (Html.BeginForm("DeleteAppointment", "Home"))
                    {
                        <input type="submit" value="Cancel Appointment" class="btn btn-primary" />
                    }
                    @using (Html.BeginForm("Login", "Home"))
                    {
                        <input type="submit" value="Logout" class="btn btn-danger " />
                    }
                </div>
            </nav>
        </div>
        <div>
            @if (TempData["SuccessMessage"] != null)
            {
                <div align="center" class="alert-success" id="SuccessMgs"><b>@TempData["SuccessMessage"]</b></div>
            }
        </div>
    </header>
    <br />
    <br />
    <br />
    <br />
    <br />
    <br />
    <br />
    <br />

    <div class="container-fluid bg-light">
        <div class="row py-2 px-lg-3 ">
            <img src="~/Image/CancelAppointment_logo.jpeg" width="60" height="60" />
            <h2 class="m-0 text-primary"><span class="text-secondary">Cancel </span>Appointment </h2>
        </div>
    </div>

    <div class="container">
        @using (Html.BeginForm("ShowById", "Home", FormMethod.Post))
        {
            <div>
                PatientID <input type="Text" name="PatientID" />
                VisitDate <input type="date" name="VisitDate" />
                <input type="submit" value="Search" class="btn btn-primary "/>
            </div>
        }

        <table class="table">
            <thead>
                @*<tr>
                    @using (Html.BeginForm("DeleteList", "Home", FormMethod.Post))
                        {
                            <p>
                                PatientID: <input type="Text" name="Patient ID" />
                                <input type="submit" value="Search" class="btn btn-primary py-2 px-4 d-none d-lg-block" />
                            </p>
                        }
                </tr>*@
                <tr>
                    <th>@Html.DisplayName("Appointment ID")</th>

                    <th>@Html.DisplayName("Patient ID")</th>

                    <th>@Html.DisplayName("Visit Date")</th>

                    <th>@Html.DisplayName("AppointmentTime")</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.AppointmentID)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.PatientID)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.VisitDate)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.AppointmentTime)
                        </td>
                        <td id="btn">
                            @Html.ActionLink("Delete", "Delete", new { id = item.PatientID, aptid = item.AppointmentID }, new { onclick = "return confirm('Are sure wants to delete?');" })
                        </td>

                    </tr>

                }
            </tbody>
        </table>
    </div>

</body>
</html>


